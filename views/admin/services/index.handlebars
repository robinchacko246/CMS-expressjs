<div class="container">


    <h3 class="alert alert-dark p-3 text-dark text-center">All Services </h3>


    <div class="row">
        <div class="col-6 mx-auto">
            <table class="table table-bordered text-center border-success text-white">
                <thead class="bg-primary">
                <tr>
                     <th>Service Title</th>
                    <th>Service Description</th>
                    <th>Service Action</th>
                </tr>
                </thead>
                <tbody class="table-hover bg-dark services-list">
                {{#each services}}
                    <tr>

                        <td>{{title}}</td>
                         <td>{{description}}</td>
                        <td class="d-flex justify-content-center">  
                            <a href="/admin/services/edit/{{_id}}" class="btn btn-sm btn-warning mr-2" role="button">Edit</a>
                            <form action="/admin/services/{{_id}}?newMethod=DELETE" method="post">
                                {{!-- <button class="btn btn-sm btn-danger" type="submit">Delete</button> --}}
                            </form>
                        </td>
                    </tr>
                {{/each}}
                </tbody>

            </table>
        </div>
    </div>

    <hr>

    <div class="row p-4">
        <div class="col-md-8">
                <div class="form-group">

                    <label for="title">Title</label>
                 
                    <input type="text" class="form-control" id="services-title" name="title" placeholder="Enter Title">
                 <br>
                 <label for="title">Decription</label>
                    <textarea class="form-control" id="services-decription" name="decription" placeholder="Enter Title"></textarea>
               
               
                </div>
                    <button class="btn btn-outline-success btn-lg" id="create-services-button">Create services</button>
        </div>
    </div>


</div>