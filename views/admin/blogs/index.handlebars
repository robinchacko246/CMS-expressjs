<div class="container">


    <h3 class="alert alert-dark p-3 text-dark text-center">All blogs </h3>


    <div class="row">
        <div class="col-6 mx-auto">
            <table class="table table-bordered text-center border-success text-white">
                <thead class="bg-primary">
                <tr>
                     <th>Blog Title</th>
                    <th>Blog Description</th>
                    <th>Blog Action</th>
                </tr>
                </thead>
                <tbody class="table-hover bg-dark blogs-list">
                {{#each blogs}}
                    <tr>

                        <td>{{blogHead}}</td>
                         <td>{{blogDetails}}</td>
                        <td class="d-flex justify-content-center">  
                            <a href="/admin/blogs/edit/{{_id}}" class="btn btn-sm btn-warning mr-2" role="button">Edit</a>
                            <form action="/admin/blogs/{{_id}}?newMethod=DELETE" method="post">
                                {{!-- <button class="btn btn-sm btn-danger" type="submit">Delete</button> --}}
                            </form>
                        </td>
                    </tr>
                {{/each}}
                </tbody>

            </table>
        </div>
    </div>

    <hr>

    <div class="row p-4">
        <div class="col-md-8">
                <div class="form-group">

                    <label for="title">Title</label>
                 
                    <input type="text" class="form-control" id="blogs-title" name="title" placeholder="Enter Title">
                 <br>
                    <label for="title">Image Url</label>
                 
                    <input type="text" class="form-control" id="blogs-image" name="title" placeholder="Enter Image">

                 <label for="title">Decription</label>
                    <textarea class="form-control" id="blogs-decription" name="decription" placeholder="Enter Title"></textarea>
               
               
                </div>
                    <button class="btn btn-outline-success btn-lg" id="create-blogs-button">Create blogs</button>
        </div>
    </div>


</div>